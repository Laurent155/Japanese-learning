    let pause = True;
    const hiragana = require('../data/hiragana.json');
    
    function initialize(){
      let hiragana0 = hiragana;
      alert(hiragana0.length);
        for(let i=0; i < hiragana0.length;i++){
            document.getElementById("hiragana").innerHTML = hiragana0[i].character;
            answer = hiragana0[i].romaji;

            while(pause = True){
                let a = 2;
            }
            pause = True;
        }
    }

    function check(input){
        if(event.key === 'Enter'){
            response = input.value;
            if(response == answer){
                document.getElementById("correctness").innerHTML = "Correct!";
            } else {
                document.getElementById("correctness").innerHTML = "WRONG";
            }
        }
    }

    function unpause(){
        pause = False;
